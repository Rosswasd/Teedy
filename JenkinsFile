pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean -DskipTests install'
            }
        }
        stage('K8s') {
            steps {
                sh 'minikube start'
                sh 'kubectl config view'
                sh 'kubectl set image deployments/hello-node rosswasd/teedy:v1.0=teedy2024_jenkins'
            }
        }
    }
}